@using Trabalho1Bim.ViewModels
@model ManterClienteViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Manter Cliente</h2>
@Html.ActionLink("Adicionar Cliente", "Create", null, new { @class="btn btn-success"})
<table id="tableCliente" class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Endereco</th>
            <th>Telefone</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.ListaCliente)
        {
            <tr>
                <td>@cliente.nome</td>
                <td>@cliente.cpf</td>
                <td>@cliente.endereco</td>
                <td>@cliente.telefone</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = cliente.idPessoa}, new { @class="btn btn-primary"})
                    @Html.ActionLink("Excluir", "Delete", new { id = cliente.idPessoa }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
    
</table>
@Html.ValidationSummary()