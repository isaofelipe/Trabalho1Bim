@using Trabalho1Bim.ViewModels
@using Trabalho1Bim.Controllers
@model RealizarVendaViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>Realizar Venda</h2>
    @using (Html.BeginForm("Index", "RealizarVenda", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.ClienteId)
            @Html.DropDownListFor(m => m.ClienteId, Model.ListaClientes, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VendedorId)
            @Html.DropDownListFor(m => m.VendedorId, Model.ListaVendedores, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProdutoId)
            @Html.DropDownListFor(m => m.ProdutoId, Model.ListaProdutos, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantidade)
            @Html.TextBoxFor(m => m.Quantidade, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-success">Realizar Compra</button>
    }
    @Html.ValidationSummary()
</body>
</html>
